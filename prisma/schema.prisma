generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Customer {
  id             String   @id @default(uuid())
  name           String
  address        String
  birthPlace     String
  country         String
  department     String
  province       String
  phone          String
  occupation     String
  documentType   String
  documentNumber String   @unique
  email          String   @unique
  maritalStatus  String
  companyName    String?
  ruc            String?  @unique
  companyAddress String?
  isActive       Boolean  @default(true)
  createdAt      DateTime @default(now()) @db.Timestamptz(6)
  updatedAt      DateTime @updatedAt
}
